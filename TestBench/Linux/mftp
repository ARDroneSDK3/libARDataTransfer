#!/bin/bash -v

# FTP
FTP_PATH=/var/vsftpd

#AR.Drone
ARDRONE_PATH=$FTP_PATH/AR.Drone
sudo rm -rf $ARDRONE_PATH

ARDRONE_ACADEMY_PATH=$ARDRONE_PATH/academy
sudo mkdir -p $ARDRONE_ACADEMY_PATH

echo "data1" | sudo tee -a $ARDRONE_ACADEMY_PATH/0901_UUID0001_2014-01-21T160101+0100.pub
echo "data2" | sudo tee -a $ARDRONE_ACADEMY_PATH/0901_UUID0002_2014-02-22T160202+0100.pub
sudo chown -R ftp:ftp $ARDRONE_ACADEMY_PATH

ARDRONE_MEDIA_PATH=$ARDRONE_PATH/media
sudo mkdir -p $ARDRONE_MEDIA_PATH

sudo cp photo_20131001_235901.jpg $ARDRONE_MEDIA_PATH/AR.Drone_UUID0001_2014-01-21T160101+0100.jpg
sudo cp photo_20131002_235902.jpg $ARDRONE_MEDIA_PATH/AR.Drone_UUID0002_2014-02-22T160202+0100.jpg
sudo cp video_20131001_235901.mp4 $ARDRONE_MEDIA_PATH/AR.Drone_UUID0001_2014-01-21T160101+0100.mp4
sudo cp video_20131002_235902.mp4 $ARDRONE_MEDIA_PATH/AR.Drone_UUID0002_2014-02-22T160202+0100.mp4

ARDRONE_THUMB_PATH=$ARDRONE_PATH/thumb
sudo mkdir -p $ARDRONE_THUMB_PATH

sudo cp thumbnail_video_20131001_235901.jpg $ARDRONE_THUMB_PATH/AR.Drone_UUID0001_2014-01-21T160101+0100.jpg
sudo cp thumbnail_video_20131002_235902.jpg $ARDRONE_THUMB_PATH/AR.Drone_UUID0002_2014-02-22T160202+0100.jpg
sudo cp thumbnail_photo_20131001_235901.jpg $ARDRONE_THUMB_PATH/AR.Drone_UUID0001_2014-01-21T160101+0100.mp4.jpg
sudo cp thumbnail_photo_20131002_235902.jpg $ARDRONE_THUMB_PATH/AR.Drone_UUID0002_2014-02-22T160202+0100.mp4.jpg

sudo chown -R ftp:ftp $ARDRONE_PATH
sudo ls -l $ARDRONE_ACADEMY_PATH
sudo ls -l $ARDRONE_MEDIA_PATH
sudo ls -l $ARDRONE_THUMB_PATH

#Jumping Sumo
JS_PATH="$FTP_PATH/Jumping Sumo"
sudo rm -rf "$JS_PATH"
#sudo mkdir "$JS_PATH"

JS_ACADEMY_PATH="$JS_PATH/academy"
sudo mkdir -p "$JS_ACADEMY_PATH"

echo "data1" | sudo tee -a "$JS_ACADEMY_PATH/0902_UUID0101_2014-01-21T160101+0100.pub"
sudo chown -R ftp:ftp "$JS_ACADEMY_PATH"

JS_MEDIA_PATH="$JS_PATH/media"
sudo mkdir -p "$JS_MEDIA_PATH"

sudo cp photo_20131001_235901.jpg "$JS_MEDIA_PATH/Jumping Sumo_UUID0101_2014-01-21T160101+0100.jpg"

JS_THUMB_PATH="$JS_PATH/thumb"
sudo mkdir -p "$JS_THUMB_PATH"

sudo cp thumbnail_photo_20131001_235901.jpg "$JS_THUMB_PATH/Jumping Sumo_UUID0101_2014-01-21T160101+0100.jpg"

sudo chown -R ftp:ftp "$JS_PATH"
sudo ls -l "$JS_ACADEMY_PATH"
sudo ls -l "$JS_MEDIA_PATH"
sudo ls -l "$JS_THUMB_PATH"

#MiniDrone
MINIDRONE_PATH=$FTP_PATH/MiniDrone
sudo rm -rf $MINIDRONE_PATH

MINIDRONE_ACADEMY_PATH="$MINIDRONE_PATH/academy"
sudo mkdir -p "$MINIDRONE_ACADEMY_PATH"

echo "data1" | sudo tee -a "$MINIDRONE_ACADEMY_PATH/0902_UUID0201_2014-01-21T160101+0100.pub"
sudo chown -R ftp:ftp "$MINIDRONE_ACADEMY_PATH"

sudo chown -R ftp:ftp "$MINIDRONE_PATH"
sudo ls -l "$MINIDRONE_ACADEMY_PATH"


sudo service vsftpd stop
sudo service vsftpd start

